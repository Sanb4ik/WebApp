@model IEnumerable<WebApp.Models.User>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
<link rel="stylesheet" type="text/css" href="~/css/Index/style.css" />

<script src="~/js/Toolbar.js"></script>



<div class="container block2">
   
    <div class="row">
        <div class="topnav">
            <div style="display:flex;justify-content:center;align-items:center;">

                <button type="button" onclick="deleteCheckedContacts()" class="btn btn-danger">Delete</button>
                <button type="button" onclick="blockCheckedContacts()" class="btn btn-warning">Block</button>
                <button type="button" onclick="unblockCheckedContacts()" class="btn btn-success">Unblock</button>
                <button id="btn-on" class="btn btn-dark">Select all</button>
                <button id="btn-off" class="btn btn-dark">Unselect</button>
                <button type="button" onclick="logout()" class="btn btn-primary">Logout</button>

            </div>
        </div>
        <table class="table table-hover table-responsive">
            <thead>
                <tr>
                </tr>
                <tr>
                    <th>Id</th>
                    <th class="col-md-3 col-xs-3">Name</th>
                    <th class="col-md-3 col-xs-3">Last Name</th>
                    <th class="col-md-3 col-xs-3">E-mail</th>
                    <th class="col-md-3 col-xs-3">Registration</th>
                    <th class="col-md-3 col-xs-3">Last login</th>
                    <th class="col-md-3 col-xs-3">Status</th>
                    <th class="custom-checkbox">Choose</th>
                </tr>
            </thead>
            <tbody>
                @foreach (WebApp.Models.User user in Model)
                {
                 <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.Name</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.RegisterDate.ToString("d")</td>
                    <td>@user.LastLoginDate.ToString("d")</td>
                    <td>@user.Status</td>
                    <td><input class="user-checkbox" type="checkbox" name="@user.Id"></td>
                </tr>
                }
            </tbody>
        </table>

    </div><!-- ./row -->
</div><!-- ./container -->
<script src="https://snipp.ru/cdn/jquery/2.1.1/jquery.min.js"></script>
<script>$('#btn-on').click(function () {
        $('body input:checkbox').prop('checked', true);
    });
    $('#btn-off').click(function () {
        $('body input:checkbox').prop('checked', false);
    });</script>
